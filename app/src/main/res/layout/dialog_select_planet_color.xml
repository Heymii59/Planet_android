<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_custom_dialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_select_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_home_title_add_to_do_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행성 색 지정하기"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dialog_select_exit_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dialog_select_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="*새로운 행성의 색은 기존 행성의 색과 겹칠 수 없습니다"
        android:textColor="@color/gray_edit_font"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_select_top_layout" />

    <RadioGroup
        android:id="@+id/dialog_select_color_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_select_explain_tv">

        <GridLayout
            android:id="@+id/dialog_select_color_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:rowCount="2">

            <RadioButton
                android:id="@+id/dialog_select_none"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:layout_rowWeight="1"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/purple_896DF3" />

            <RadioButton
                android:id="@+id/dialog_select_green"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/green_7AE3AA" />

            <RadioButton
                android:id="@+id/dialog_select_orange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/yellow_FFC212" />

            <RadioButton
                android:id="@+id/dialog_select_pink"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/apricot_F8CBB6" />

            <RadioButton
                android:id="@+id/dialog_select_plum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/red_F2606A" />

            <RadioButton
                android:id="@+id/dialog_select_purple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet" />

            <RadioButton
                android:id="@+id/dialog_select_lime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/green_E0FC4E" />

            <RadioButton
                android:id="@+id/dialog_select_mustard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/yellow_FFE500" />

            <RadioButton
                android:id="@+id/dialog_select_sky"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/light_blue_b4c9ff" />

            <RadioButton
                android:id="@+id/dialog_select_mono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/shape_radius_rec_planet"
                android:backgroundTint="@color/gray_E1E1E1" />
        </GridLayout>
    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_save_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_rectangle_bottom_radius_10dp_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_select_color_rg">

        <TextView
            android:id="@+id/dialog_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>