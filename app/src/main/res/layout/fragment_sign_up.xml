<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.login.SignUpFragment">

    <TextView
        android:id="@+id/sign_up_header_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="4dp"
        android:text="당신의 성장을 돕는\n오계되입니다."
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_up_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_D9D9D9"
        android:text="서비스 이용을 위해 가입을 진행해주세요"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_header_text_view"
        app:layout_constraintStart_toStartOf="@id/sign_up_header_text_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/email_sign_up_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="이메일 회원가입"
        app:layout_constraintVertical_bias="0.4"
        android:backgroundTint="@color/purple_896DF3"
        android:background="@drawable/shape_rectangle_radius_24dp"/>

    <View
        android:id="@+id/left_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/email_sign_up_button"
        app:layout_constraintEnd_toStartOf="@id/social_login_description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/gray_D9D9D9"/>
    <TextView
        android:id="@+id/social_login_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편로그인"
        app:layout_constraintStart_toEndOf="@id/left_divider"
        app:layout_constraintTop_toTopOf="@id/left_divider"
        app:layout_constraintBottom_toBottomOf="@id/left_divider"
        app:layout_constraintEnd_toStartOf="@id/right_divider"/>

    <View
        android:id="@+id/right_divider"
        android:background="@color/gray_D9D9D9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toEndOf="@id/social_login_description_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/left_divider"
        app:layout_constraintBottom_toBottomOf="@id/left_divider"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kakao_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/social_login_description_text_view"
        app:layout_constraintStart_toStartOf="@id/email_sign_up_button"
        app:layout_constraintEnd_toEndOf="@id/email_sign_up_button"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="카카오로 로그인"
        app:layout_constraintVertical_bias="0.4"
        android:backgroundTint="@color/yellow_FFE500"
        android:background="@drawable/shape_rectangle_radius_24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/naver_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_button"
        app:layout_constraintStart_toStartOf="@id/email_sign_up_button"
        app:layout_constraintEnd_toEndOf="@id/email_sign_up_button"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="네이버로 로그인"
        app:layout_constraintVertical_bias="0.4"
        android:backgroundTint="@color/green_00C73C"
        android:background="@drawable/shape_rectangle_radius_24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>