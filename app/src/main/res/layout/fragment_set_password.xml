<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.login.SetPasswordFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/start_next_page_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/set_password_description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingExtra="4dp"
                android:text="비밀번호 설정"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/input_password_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력해주세요"
                android:paddingVertical="20dp"
                android:theme="@style/Theme.Planet.EditTextTheme"
                app:layout_constraintEnd_toEndOf="@id/set_password_description_text_view"
                app:layout_constraintStart_toStartOf="@id/set_password_description_text_view"
                app:layout_constraintTop_toBottomOf="@id/set_password_description_text_view" />

            <TextView
                android:id="@+id/confirm_password_description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:lineSpacingExtra="4dp"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/set_password_description_text_view"
                app:layout_constraintStart_toStartOf="@id/set_password_description_text_view"
                app:layout_constraintTop_toBottomOf="@id/input_password_edit_text" />

            <EditText
                android:id="@+id/confirm_password_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 다시 한번 입력해주세요"
                android:paddingVertical="20dp"
                android:theme="@style/Theme.Planet.EditTextTheme"
                app:layout_constraintEnd_toEndOf="@id/set_password_description_text_view"
                app:layout_constraintStart_toStartOf="@id/set_password_description_text_view"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_description_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_next_page_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/purple_896DF3"
        android:gravity="center"
        android:text="계속하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>